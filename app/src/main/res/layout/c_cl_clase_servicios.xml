<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/contorno_only">

    <LinearLayout
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/desbanecidos_clases"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreClaseTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/salsa_font"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="Nombre de clase"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/nombreInstructorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa_font"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="Nombre del instructor"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/descripcionTextView"
                android:layout_width="250dp"
                android:layout_height="52dp"
                android:fontFamily="@font/salsa_font"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="DescripciÃ³n"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/apagado"
        android:layout_marginBottom="8dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="-60dp"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:id="@+id/imageTextView"
        android:src="@drawable/default_image"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/dia1CS"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/salsa_font"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="dia1"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/dia2CS"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa_font"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="dia2"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/dia3CS"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa_font"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="dia3"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>