<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/contorno_only">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/borde_limon">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nombre de clase"
            android:id="@+id/nombreClaseTextView"
            android:textSize="30dp"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del instructor"
            android:id="@+id/nombreInstructorTextView"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:id="@+id/descripcionTextView"
            android:textSize="17dp"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:textColor="@color/white"
            android:paddingBottom="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/apagado"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="4">

            <TextView
                android:id="@+id/horarios"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Horario"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/hora"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Hora"
                android:textSize="18dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>