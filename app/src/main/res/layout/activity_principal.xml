<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente.principal"
    android:background="@color/adbackcolor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/loco"
        android:layout_height="70dp"
        android:background="#00C596">
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/salsa_font"
            android:padding="16dp"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:text="Inicio"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/bienvenidoUsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loco"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listViewClaCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor"
            android:showDividers="middle" />
    </LinearLayout>




</RelativeLayout>