<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:text="Vista admin"
        android:textSize="20sp"
        android:id="@+id/viAd"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:text="Vista Entrenador"
        android:textSize="20sp"
        android:id="@+id/viEn"
        android:layout_below="@id/viAd"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:text="Vista Cliente"
        android:textSize="20sp"
        android:id="@+id/viCl"
        android:layout_below="@+id/viEn"/>


    <androidx.fragment.app.FragmentContainerView
        android:name="com.example.fitnes_hanma.Instructor.fragments.Navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/fragment_navbar"
        tools:layout="@layout/fragment_navbar" />



</RelativeLayout>