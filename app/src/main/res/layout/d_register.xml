<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.and
    roid.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:background="@drawable/desbanecido_inicios">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00083E"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <!-- Botón de retroceso -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:contentDescription="Botón de retroceso"
            android:src="@drawable/back_cli" />

        <!-- Título de la barra de herramientas -->
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/salsa_font"
            android:text="Registrate"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/titulo"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="16dp"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:fontFamily="@font/salsa_font"
        android:text="Fitness Hanma"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:layout_marginTop="15dp">
    </TextView>


    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/bordes_formulario_blanco"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/titulo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/salsa_font"
            android:padding="7dp"
            android:text="Registro"
            android:textAlignment="center"
            android:textColorHint="#4A4A4A"
            android:textSize="30sp"/>


        <EditText
            android:id="@+id/nombreR"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:hint="Nombre completo"
            android:background="@drawable/borde_azul_claro"
            android:fontFamily="@font/salsa_font"
            android:paddingHorizontal="16dp"
            android:textColorHint="@color/encendido"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/correoR"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/borde_azul_claro"
            android:fontFamily="@font/salsa_font"
            android:hint="Correo electronico"
            android:paddingHorizontal="16dp"
            android:textColorHint="@color/encendido"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/contrasenaR"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/borde_azul_claro"
            android:fontFamily="@font/salsa_font"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/encendido"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/confirmContraR"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/borde_azul_claro"
            android:fontFamily="@font/salsa_font"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/encendido"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="75dp"
            android:padding="7dp"
            android:id="@+id/btn_registro"
            android:layout_marginBottom="5dp"
            android:background="@drawable/alayer_list_background">
            <TextView
                android:fontFamily="@font/salsa_font"
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Aceptar"
                android:textSize="15dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/form"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp"
        android:id="@+id/iniciarSesion"
        android:layout_marginHorizontal="75dp"
        android:background="@drawable/alayer_list_background">
        <TextView
            android:fontFamily="@font/salsa_font"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Ya tengo una cuenta"
            android:textSize="16dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</RelativeLayout>
