<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Instructor.grupo.Grupo_mi_post">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comunidad"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/gris"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp">
        <Button
            android:id="@+id/general"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="General"
            android:textColor="@color/white"
            android:backgroundTint="@color/secondary"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center" />
        <Button
            android:id="@+id/mi_post"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Mi Post"
            android:textColor="@color/white"
            android:backgroundTint="@color/secondary"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:padding="15dp">
        <ListView
            android:id="@+id/publicaciones"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <androidx.fragment.app.FragmentContainerView
            android:name="com.example.fitnes_hanma.Instructor.fragments.Navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/fragment_navbar"
            tools:layout="@layout/fragment_navbar" />

    </RelativeLayout>

</RelativeLayout>